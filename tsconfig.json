{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "declaration": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "types": [
    "node"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts"
  ]
}
